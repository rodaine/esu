#!/bin/bash
set -e
cd $(dirname "$0")/..

GPM="gpm"

if test "Darwin" == "$(uname)"
  then brew install gpm
fi

which gpm > /dev/null 2>&1 || {
  wget https://raw.githubusercontent.com/pote/gpm/154853157fbdd53d489a60a93f30c95123701992/bin/gpm
  chmod 755 ./gpm
  GPM="./gpm"
}

$GPM install
go install .
